#APPENDING VALUES TO THE ARRAY:

years=(2018 2019 2020 2021 2022)
years+=(2027)			--> add item to the array
years+=(2027,2034)		--> add multiple items to the array

#SLICING ARRAYS:

echo ${years[@]:2}		--> display array starting index 2
echo ${years[@]:2:4}		--> display array starting index 2, 4 items only

#Note: slicing arrays doesnt modify original array

#ASSOCIATIVE ARRAYS

declare -A userdata		--> declare is mandatory for creating associative arrays
userdate[username]="your admin"	--> assigning values with keys
userdate[password]="your admin"
userdate[uid]="1010"

declare -r -A SUPERSTARS=(			--> make array readOnly
 [Germany]="Boney M"
[USA]="Bon Jovi"
)

unset SUPERSTARS[USA]		--> remove item from array

